extends layouts/main-layout.pug

block styles 
	link(rel="stylesheet", href="/css/main.css")

block content
	main
		.grid
			if prods.length > 0
				each product in prods
					article.card.product-item
						header.card__header
					h1.product__title #{product.title}
					.card__image
						img(src="https://dictionary.cambridge.org/vi/images/thumb/book_noun_001_01679.jpg?version=5.0.243", alt="A Book")
					.card__content
						h2.product__price $20
						p.product__description
					.card__actions
						button.btn Add to Cart
			else
				h1 No Product!

