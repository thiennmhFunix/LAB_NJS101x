<main>
	{{#if hasProducts}}
		<div class="grid">
			{{each prods}}
				<article class="card product-item">
					<header class="card__header">
						<h1 class="product__title">{{this.title}}</h1>
					</header>
					<div class="card__image">
						<img src="https://dictionary.cambridge.org/vi/images/thumb/book_noun_001_01679.jpg?version=5.0.243" alt="A Book">
					</div>
					<div class="card__content">
						<h2 class="product__price">$20</h2>
						<p class="product__description">Very great book</p>
					</div>
					<div class="card__actions">
						<button class="btn">Add to Cart</button>
					</div>
				</article>
			{{/each}}
		</div>
	{{else}}
		<h1> No Product!!</h1>
	{{/if}}
</main>